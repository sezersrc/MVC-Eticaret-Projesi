
@{
    ViewBag.Title = "Sipariş Güncelleme";
    Layout = "~/Areas/admin/Views/Shared/_LayoutPageAdmin.cshtml";
}


<div class="col-md-12">
    <div class="row">
        <div class="col-md-12 Baslik "> SİPARİŞ GÜNCELLEME </div>

        <div class=" col-md-12">
            @using (Html.BeginForm())
            {
                foreach (var item in Model)
                {
                    foreach (var c in ViewBag.Data)
                    {


                        <div class="row" style="margin-bottom:15px;margin-top:15px">
                            <span style="padding:5px;display:block"> <b> Sipariş NO : @item.OrderID </b> </span>
                        </div>
                        <div class="row" style="margin-bottom:15px;margin-top:15px">
                            <span style="padding:5px;display:block"> <b> Ödeme Tarihi:  @item.PaymentTime.ToString("dd.mm.yyy - HH:ss")  </b></span>

                        </div>

                        <div class="row" style="margin-bottom:15px;margin-top:15px">
                            <span style="padding:5px;display:block">
                                <b>
                                    Müşteri ADI :if (c.OrderID == item.OrderID)
                                    {
                                    @c.NameSurName
                                    }


                                </b>
                            </span>
                        </div>

                        <div class="row" style="margin-bottom:15px;margin-top:15px">
                            <span style="padding:5px;display:block"> <b>Karo Ücreti</b></span>
                            <input type="text" name="CargoPrice" value="@item.CargoPrice  TL" class="form-control" placeholder="Kargo Ücreti: " />
                        </div>
                        <div class="row" style="margin-bottom:15px;margin-top:15px">
                            <span style="padding:5px;display:block"> <b>Toplam  Ücret</b></span>
                            <input type="text" name="TotalPrice" value="@item.TotalPrice  TL" class="form-control" placeholder="Kargo Ücreti: " />
                        </div>
                        <div class="row" style="margin-bottom:15px;margin-top:15px">
                            <span style="padding:5px;display:block"> Ödeme Tipi </span>
                            <input type="text" name="PaymentType" value="@item.PaymentType" class="form-control" placeholder="Ödeme Tipi: " />
                        </div>


                        <div class="row" style="margin-bottom:15px;margin-top:15px">
                            <span style="padding:5px;display:block"> Kargo Numarası </span>
                            <input type="text" name="CargoNumber" value="@item.CargoNumber" class="form-control" placeholder="Kargo Numarası: " />
                        </div>



                            <div class="row" style="margin-bottom:15px;margin-top:15px">
                                <select type="text" name="OrderStatus" class="form-control">
                                    @if (item.OrderStatus == "Yeni Sipariş")
                                    {
                                        <option value="Yeni Sipariş"> Yeni Sipariş  </option>
                                        <option value="Onaylandı">Siparişi Onayla</option>
                                    }
                                    else
                                    {
                                        <option value="Onaylandı">Siparişi Onayla</option>
                                        <option value="Yeni Sipariş"> Yeni Sipariş </option>
                                    }

                                </select>
                            </div>                           


                       
                        


                        <div class="row" style="margin-bottom:15px;margin-top:15px">
                            <button type="submit" class="form-control btn btn-primary"> SİPARİŞ GÜNCELLE </button>
                        </div>

                    }


                }


                <div class="col-md-12" style="margin-top:25px;">


                    @if (ViewBag.Mesaj != null)
                    {
                        @Html.Raw(ViewBag.Mesaj)
                    }
                </div>



            }
        </div>

    </div>
</div>

