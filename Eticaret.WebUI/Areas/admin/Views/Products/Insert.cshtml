
@{
    ViewBag.Title = "Ürün Ekleme";
    Layout = "~/Areas/admin/Views/Shared/_LayoutPageAdmin.cshtml";
}


<div class="col-md-12">
    <div class="row">
        <div class="col-md-12 Baslik "> ÜRÜN EKLEME </div>

        <div class=" col-md-12">
            @using (Html.BeginForm("Insert", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="row" style="margin-bottom:15px;margin-top:15px">
                    <input type="file" name="Upload" class="form-control" placeholder="Ürün Resmi: " />

                </div>
                <div class="row" style="margin-bottom:15px;margin-top:15px">
                    <input type="text" name="Name" class="form-control" placeholder="Ürün Adı: " />

                </div>



                <div class="row" style="margin-bottom:15px;margin-top:15px">
                    <select type="text" name="CategoryID" class="form-control">

                        @foreach (var item in Model)
                        {
                            <option value="@item.CategoryID">@item.Name</option>
                        }


                    </select>
                </div>
                <div class="row" style="margin-bottom:15px;margin-top:15px">
                    <input type="text" name="Details" class="form-control" placeholder="Açıklama: " />
                </div>


                <div class="row" style="margin-bottom:15px;margin-top:15px">
                    <input type="text" name="Price" class="form-control" placeholder="Satış Fiyatı: " />
                </div>

                <div class="row" style="margin-bottom:15px;margin-top:15px">
                    <input type="text" name="DiscountPrice" class="form-control" placeholder=" İndirimli Satış Fiyatı: " />
                </div>

                <div class="row" style="margin-bottom:15px;margin-top:15px">
                    <input type="text" name="Stock" class="form-control" placeholder=" Ürün Stok Adedi : " />
                </div>


                <div class="row" style="margin-bottom:15px;margin-top:15px">
                    <select type="text" name="Status" class="form-control">
                        <option value="True"> Ürünü Aktif Yap</option>
                        <option value="False">Ürünü Pasif Yap</option>
                    </select>
                </div>

                <div class="row" style="margin-bottom:15px;margin-top:15px">
                    <button type="submit" class="form-control btn btn-primary"> Ürünü Ekle  </button>
                </div>
                <div class="col-md-12" style="margin-top:25px;">
                    @if (ViewBag.Data != null)
                    {
                        @Html.Raw(ViewBag.Data)
                    }
                </div>

            }
        </div>

    </div>
</div>

