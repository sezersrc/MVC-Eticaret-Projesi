
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Modustore Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/Areas/admin/AContent/AdminTema/template/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/Areas/admin/AContent/AdminTema/template/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/Areas/admin/AContent/AdminTema/template/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/Areas/admin/AContent/template/AdminTema/images/favicon.png" />
</head>

 
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row w-100">
                    <div class="col-lg-4 mx-auto">
                        @foreach (var item in Model)
                        {
                            <div class="auth-form-light text-left p-5">
                                <div class="brand-logo">
                                    <img src="~/Logo/@item.Logo" alt="logo" style="text-align-all: center">
                                </div>
                                <h4>Modustore Admin Panel</h4>

                                <form class="pt-3">
                                    <div class="form-group">
                                        <input type="email" class="form-control form-control-lg" value="@item.Email" placeholder="Email">
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control form-control-lg" value="@item.Password" placeholder="Password">
                                    </div>
                                    <div class="mt-3">
                                        <a class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" href="/Admin/Default/Index">Giriş Yap</a>
                                    </div>
                                    <div class="my-2 d-flex justify-content-between align-items-center">
                                        <div class="form-check">
                                            <label class="form-check-label text-muted">
                                                <input type="checkbox" class="form-check-input">
                                                Keep me signed in
                                            </label>
                                        </div>
                                        <a href="#" class="auth-link text-black">Şifremi Unuttum</a>
                                    </div>

                                </form>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/Areas/admin/AContent/AdminTema/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/Areas/admin/AContent/AdminTema/template/js/off-canvas.js"></script>
    <script src="~/Areas/admin/AContent/AdminTema/template/js/hoverable-collapse.js"></script>
    <script src="~/Areas/admin/AContent/AdminTema/template/js/template.js"></script>
    <script src="~/Areas/admin/AContent/AdminTema/template/js/settings.js"></script>
    <script src="~/Areas/admin/AContent/AdminTema//template/js/todolist.js"></script>
    <!-- endinject -->
</body>

</html>
