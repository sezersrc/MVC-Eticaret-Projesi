
@{
    ViewBag.Title = "BİLGİ Ekleme";
    Layout = "~/Areas/admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

<div class="col-md-12">
    <div class="row">
        <div class="col-md-12 Baslik "> BİLGİ EKLEME </div>

        <div class=" col-md-12">
            @using (Html.BeginForm("Insert", "Settings", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="row" style="margin-bottom:15px;margin-top:15px">
                    <input type="file" name="Upload" class="form-control" placeholder="Firma Logosu: " />

                </div>
                <div class="row" style="margin-bottom:15px;margin-top:15px">
                    <input type="text" name="Name" class="form-control" placeholder="Firma Adı: " />

                </div>


                <div class="row" style="margin-bottom:15px;margin-top:15px">
                    <input type="text" name="Phone" class="form-control" placeholder="Telefon: " />
                </div>

                <div class="row" style="margin-bottom:15px;margin-top:15px">
                    <input type="text" name="CellPhone" class="form-control" placeholder=" Cep Telefonu: " />
                </div>

                <div class="row" style="margin-bottom:15px;margin-top:15px">
                    <input type="text" name="VergiDairesi" class="form-control" placeholder=" Vergi Dairesi : " />
                </div>
                <div class="row" style="margin-bottom:15px;margin-top:15px">
                    <input type="text" name="VergiNO" class="form-control" placeholder=" Vergi NO : " />
                </div>
                <div class="row" style="margin-bottom:15px;margin-top:15px">
                    <input type="text" name="Email"  class="form-control" placeholder=" E-Posta : " />
                </div>
                <div class="row" style="margin-bottom:15px;margin-top:15px">
                    <input type="text" name="City"  class="form-control" placeholder=" Şehir : " />
                </div>
                <div class="row" style="margin-bottom:15px;margin-top:15px">
                    <input type="text" name="District"  class="form-control" placeholder=" İlçe : " />
                </div>

                <div class="row" style="margin-bottom:15px;margin-top:15px">
                    <input type="text" name="CompanyAdress"  class="form-control" placeholder=" Adres : " />
                </div>


                <div class="row" style="margin-bottom:15px;margin-top:15px">
                    <input type="password" name="Password" class="form-control" placeholder="Şifre: " />
                </div>


                <div class="row" style="margin-bottom:15px;margin-top:15px">
                    <button type="submit" class="form-control btn btn-primary">  Ekle  </button>
                </div>
                <div class="col-md-12" style="margin-top:25px;">
                    @if (ViewBag.Mesaj != null)
                    {
                        @Html.Raw(ViewBag.Mesaj)
                    }
                </div>

            }
        </div>

    </div>
</div>
